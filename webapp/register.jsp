                                    <input type="password" id="password1" class="form-control" name="password1" required>
                                </div>
                            </div>
							
						   <div class="form-group row">
						   <label for="dropDown" class="col-md-4 col-form-label text-md-right">Role</label>
						    <div class="col-md-6">
	                            <select class="form-select form-select-sm"  name = "role" id = "role" aria-label=".form-select-sm example">
